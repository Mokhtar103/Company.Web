@model SignUpViewModel
@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<h1>SignUp</h1>
<br />

<form asp-action="SignUp" method="post">
    <div asp-validation-summary="All"></div>

    <input type="text" asp-for="FirstName" placeholder="First Name" class="form-control" />
    <span asp-validation-for="FirstName"></span>
    <br />
    <input type="text" asp-for="LastName" placeholder="Last Name" class="form-control" />
    <span asp-validation-for="LastName"></span>
    <br />
    <input type="email" asp-for="Email" placeholder="Email" class="form-control" />
    <span asp-validation-for="Email"></span>
    <br />
    <input type="password" asp-for="Password" placeholder="Password" class="form-control" />
    <span asp-validation-for="Password"></span>
    <br />

    <input type="password" asp-for="ConfirmPassword" placeholder="Confirm Password" class="form-control" />
    <span asp-validation-for="ConfirmPassword"></span>
    <br />

    <div class="wthree-text">
        <label class="anim">

            <input type="checkbox" required />
            <span>I Agree to The Terms & Conditions</span>
        </label>
        <div class="clear"></div>
    </div>

    <input type="submit" value="SignUp" class="btn btn-primary" />
	
</form>
<p class="text-white">Do you have an account <a asp-action="Login">Login Now</a></p>